FROM php:8.3

# Install necessary system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    mariadb-client \
    libzip-dev \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Install PHP extensions
RUN docker-php-ext-install pdo_mysql zip

# Ensure the logs directory exists
RUN mkdir -p /app/logs

# Configure PHP error logging in php.ini
RUN echo "log_errors = On" >> /usr/local/etc/php/conf.d/php-logging.ini && \
    echo "error_log = /app/logs/php_errors.log" >> /usr/local/etc/php/conf.d/php-logging.ini && \
    echo "display_errors = On" >> /usr/local/etc/php/conf.d/php-logging.ini && \
    echo "display_startup_errors = On" >> /usr/local/etc/php/conf.d/php-logging.ini

